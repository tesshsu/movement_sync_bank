{
  "name": "dougs-sync-validation",
  "version": "1.0.0",
  "description": "API for validating bank synchronization data for Dougs",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "author": "Tess",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.17.2",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^17.0.14",
    "eslint": "^7.32.0",
    "jest": "^27.2.1",
    "nodemon": "^2.0.0",
    "prettier": "^2.5.1",
    "supertest": "^6.3.3",
    "ts-jest": "^27.0.5",
    "typescript": "^4.5.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true,
      "jest/globals": true
    },
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
